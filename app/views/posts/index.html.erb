<br>
<h1>Blog Posts</h1>
<br>
<% @posts.each do |post| %>
    <div class="card card-body bg-light">
        <h3><%= post.title %></h3>
        <p><%= post.body %></p>
        <div>
            <%= link_to "Read More", post_path(post), :type => 'button', :class => 'btn btn-primary' %>
        </div>
    </div>
    <br>
<% end %>